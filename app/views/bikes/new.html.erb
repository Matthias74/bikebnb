<div class="bike-breath"></div>
<div class ="background-gradient">
  <div class="container">
    <div class="row">
    <div class="col-xs-10 col-xs-offset-1 col-sm-5 col-sm-offset-3">
      <div class="form-border">
        <h1 class="text-center">Your new bike</h1>
        <%= simple_form_for(@bike) do |f| %>
          <%= f.error_notification %>
          <%= f.input :name %>
          <%= f.input :description, placeholder: "Scott Sub 10"  %>
          <%= f.input :photo, as: :attachinary %>
          <%= f.button :submit, class: "btn btn-primary" %>
        <% end %>
        <p class="text-center" style= "margin: 90px" > <%= link_to 'Back', bikes_path %></p>
      </div>
      </div>
    </div>
  </div>
</div>



